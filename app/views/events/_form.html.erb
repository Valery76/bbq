<%# Паршиал дляотображения формы создания нового события %>
<%= form_with(model: @event, local: true) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :datetime %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :pincode %>
    <%= f.text_field :pincode, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit t('views.save'), class: 'btn btn-primary' %>
    или <%= link_to t('views.back'), :back %>
    <% if @event.persisted? %>
      или
      <%= link_to t('views.events.delete'), event_path(@event), method: :delete,
        data: {confirm: t('views.events.are_you_sure')}, class: 'btn btn-danger' %>
    <% end %>
  </div>
<% end %>
