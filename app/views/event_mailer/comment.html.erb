<h1><%= t('.title') %></h1>
<p><%= @comment.body %></p>
<p>
  <%= t('.author') %>:
  <% if @comment.user.present? %>
    <%= link_to(@comment.user.name, user_url(@comment.user)) %>
  <% else %>
    <%= @comment.user_name %>
  <% end %>
</p>

<hr/>

<%= t('.event') %>
<h3><%= link_to(@event.title, event_url(@event)) %></h3>

<%= render partial: 'datetime', locals: { event: @event } %>
<h4><%= l(@event.datetime, format: :short) %></h4>

<%= t('.owner') %>
<h4><%= link_to(@event.user.name, user_url(@event.user)) %></h4>
